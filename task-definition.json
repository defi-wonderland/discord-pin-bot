{
  "family": "alice-discord-bot-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "${{ env.TASK_EXECUTION_ROLE_ARN }}",
  "taskRoleArn": "${{ env.TASK_ROLE_ARN }}",
  "containerDefinitions": [
    {
      "name": "alice-discord-bot",
      "image": "<IMAGE>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/alice-discord-bot-prod",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
